<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"

 "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd"        [
        <!ENTITY mappings SYSTEM "classpath://hibernate.mappings.xml">
        ]>

<hibernate-configuration>

    <session-factory>	
    	
    	<property name="hibernate.connection.driver_class">org.gjt.mm.mysql.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/nettracer_westjet</property>

		<property name="hibernate.connection.username">nettracer</property>
		<property name="hibernate.connection.password">nettracer</property>
		<property name="hibernate.show_sql">false</property>
		<property name="jdbc.fetch_size">50</property> 
		<property name="jdbc.batch_size">25</property> 
		<property name="jdbc.use_scrollable_resultset">false</property> 
		<property name="hibernate.dialect">org.hibernate.dialect.Mysql5BitBooleanDialect</property>
		<property name="company.code">WS</property>
		<property name="hibernate.connection.isolation">1</property>
		<property name="hibernate.show_sql">false</property>
			  <property name="jdbc.batch_size">0</property>
  <property name="hibernate.listeners.envers.autoRegister">false</property>	
			
		<!-- c3p0 -->
		
		<property name="hibernate.cache.provider_class">net.sf.ehcache.hibernate.SingletonEhCacheProvider</property>
		<property name="hibernate.cache.provider_configuration_file_resource_path">/ehcache.xml</property>
		<property name="hibernate.cache.use_second_level_cache">false</property>
		<property name="hibernate.cache.use_query_cache">false</property>

		&mappings;
		
    </session-factory>

</hibernate-configuration>