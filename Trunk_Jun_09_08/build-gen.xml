		<delete file="${basedir}/web/reports/LostDelayReceipt_fr.jasper" />
		<delete file="${basedir}/web/reports/DamageReceipt_fr.jrxml" />
		<delete file="${basedir}/web/reports/DamageReceipt_fr.jasper" />
