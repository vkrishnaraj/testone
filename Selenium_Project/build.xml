<project default="test">
	<property name="srcdir" location="src/aero/nettracer/web/defaul/testing" />
	<property name="builddir" location="build" />
	<property name="reportdir" location="reports" />

	<mkdir dir="${builddir}"/>
		
	<patternset id="jar.files">
		<include name="*.jar" />
	</patternset>
	
	<path id="classpath.test">
		<pathelement location="${reportdir}" />
		<pathelement location="${builddir}" />
		<fileset dir="lib">
			<patternset refid="jar.files" />
		</fileset>
	</path>	
			

  	<target name="compile-test" >
    	<javac srcdir="${srcdir}" destdir="${builddir}" >
      		<classpath refid="classpath.test"/>
    	</javac>
  	</target>
    	
  	<target name="test" depends="compile-test">
    	<junit fork="yes" printsummary="no" haltonfailure="no" >
  			<test name="aero.nettracer.web.defaul.testing.TestResetPassword" />
      		<classpath refid="classpath.test" />
      		<formatter type="xml" />
    	</junit>
  		<junitreport todir="${reportdir}" >
  			<fileset dir="${reportdir}" >
  				<include name="*.xml" />
  			</fileset>
  			<report todir="${reportdir}" />
  		</junitreport>
  </target>

</project>